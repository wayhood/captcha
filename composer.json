{
    "name": "hyperf-ext/captcha",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "captcha"
    ],
    "description": "The Hyperf CAPTCHA package.",
    "authors": [
        {
            "name": "Eric Zhu",
            "email": "eric@zhu.email"
        }
    ],
    "autoload": {
        "psr-4": {
            "HyperfExt\\Captcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-fileinfo": "*",
        "ext-imagick": "*",
        "ext-swoole": ">=4.8",
        "hyperf-ext/encryption": "dev-master",
        "hyperf/cache": "~3.0.0",
        "hyperf/di": "~3.0.0",
        "hyperf/framework": "~3.0.0",
        "hyperf/validation": "~3.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/testing": "~3.0.0",
        "phpstan/phpstan": "^1.0",
        "swoole/ide-helper": "^5.0"
    },
    "repositories":[
       {
           "type": "vcs",
           "url": "https://github.com/netyum/encryption.git"
       }
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "HyperfExt\\Captcha\\ConfigProvider"
        }
    }
}
